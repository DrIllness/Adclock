<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:minHeight="50dp">

    <Button
        android:id="@+id/btn_title"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:gravity="center_vertical"
        android:stateListAnimator="@null"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_additional_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:textAllCaps="false"
        android:translationZ="100dip"
        app:layout_constraintBottom_toBottomOf="@+id/btn_title"
        app:layout_constraintEnd_toEndOf="@+id/btn_title"
        app:layout_constraintHorizontal_bias="0.77"
        app:layout_constraintStart_toStartOf="@+id/btn_title"
        app:layout_constraintTop_toTopOf="@+id/btn_title"
        app:layout_constraintVertical_bias="0.482" />

    <ImageView
        android:id="@+id/iv_arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:src="@android:drawable/checkbox_on_background"
        app:layout_constraintBottom_toBottomOf="@+id/tv_additional_text"
        app:layout_constraintEnd_toEndOf="@+id/btn_title"
        app:layout_constraintHorizontal_bias="0.549"
        app:layout_constraintStart_toEndOf="@+id/tv_additional_text"
        app:layout_constraintTop_toTopOf="@+id/tv_additional_text"
        app:layout_constraintVertical_bias="0.111" />

</android.support.constraint.ConstraintLayout>